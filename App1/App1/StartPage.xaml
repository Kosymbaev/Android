<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.StartPage">
    <StackLayout BackgroundColor="White">
        <Button Text="Close app" TextColor="Black" BackgroundColor="Red" Clicked="Exit_Clicked" HorizontalOptions="End"></Button>
        <Label Text="Registrate" TextColor="Black"  HorizontalOptions="Center"></Label>
        <Entry Text="Login"  BackgroundColor="GreenYellow" TextColor="Black" HorizontalOptions="Fill">
        </Entry>
        <Entry Text="Passwowrd" IsPassword="True" BackgroundColor="GreenYellow" TextColor="Black" HorizontalOptions="Fill">
        </Entry>
        <StackLayout Orientation="Horizontal">
            <CheckBox></CheckBox>
            <Label Text="Remember me" VerticalOptions="Center"></Label>
        </StackLayout>
        <Button Clicked="Button_Clicked" Text="Create Account" TextColor="Black" BackgroundColor="LightGreen"></Button>
    </StackLayout>
</ContentPage>